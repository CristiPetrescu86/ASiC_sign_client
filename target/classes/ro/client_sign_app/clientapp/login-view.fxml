<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" maxHeight="300.0" maxWidth="600.0" minHeight="300.0" minWidth="600.0" prefHeight="300.0" prefWidth="600.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.client_sign_app.clientapp.Controller.LoginController">

    <ImageView GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <image>
          <Image requestedHeight="50" requestedWidth="50" url="@agreement.png" />
        </image>
    </ImageView>
    <Label alignment="CENTER" text="Signing App" textAlignment="CENTER" textFill="#253d5b" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Label>

    <Label text="Username:" textFill="#253d5b" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

    <Label text="Password:" textFill="#253d5b" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="CENTER" />

    <Button onAction="#loginButtonAction" prefHeight="25.0" prefWidth="96.0" style="-fx-border-color: #253d5b; -fx-border-radius: 4;" text="Login" textFill="#253d5b" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
     <columnConstraints>
        <ColumnConstraints maxWidth="150.0" minWidth="50.0" prefWidth="63.0" />
        <ColumnConstraints maxWidth="155.0" minWidth="55.0" prefWidth="142.0" />
     </columnConstraints>
     <rowConstraints>
        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
     </rowConstraints>
</GridPane>
